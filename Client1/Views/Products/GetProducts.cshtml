@model List<Client1.Models.Products.GetProductViewModel>

@{
    ViewData["Title"] = "GetProducts";
}



<div class="container mt-5">
   

    <table class="table table-hover table-bordered shadow rounded">
        <thead class="table-dark text-center">
            <tr>
          
                <th scope="col">Ürün Adı</th>
                <th scope="col">Kategori</th>
                <th scope="col">Fiyat (₺)</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @if (Model != null && Model.Any())
            {   
                foreach (var item in Model)
                {
                    <tr>
                  
                        <td>@item.name</td>
                        <td>@item.Category</td>
                        <td>@item.price.ToString("C2")</td>
                    </tr>                
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-danger fw-bold">Gösterilecek ürün bulunamadı.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
